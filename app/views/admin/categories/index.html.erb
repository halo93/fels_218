<% provide :title, t(".title") %>
<div class="col-md-9 col-sm-12">
  <div class="row">
    <div class="col-md-9 form-group">
      <%= form_tag admin_categories_path, method: :get, id: "search",
        class: "form-inline" do %>
          <%= render "admin/shared/search_form" %>
      <% end %>
    </div>
    <div class="col-md-3 form-group">
      <button type="button" class="form-control btn-success btnSearch" id="btnAdd"
        data-toggle="modal" data-target="#new-category-modal"><%= t ".add" %></button>
      <div id="new-category-modal" class="modal fade" role="form">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" id="close_modal" data-dismiss="modal">&times;</button>
              <h4 class="modal-title"><%= t ".add_header" %></h4>
            </div>
            <div class="modal-body">
              <%= form_for [:admin, @category], remote: true do |f| %>
                <%= render "shared/error_messages", object: f.object %>
                <%= f.label :name %>
                <%= f.text_field :name, class: "form-control" %>
                <%= f.submit t(".add_submit"), class: "btn btn-primary",
                  id: "new-category" %>
              <% end %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">
                <%= t ".add_close" %>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="panel panel-default">
    <table id="categories-table" class="table table-hover table-bordered">
      <thead>
      <tr class="header-table">
        <th class="text-center">
          <i class="fa fa-hashtag"></i>
          <%= t "admin.users.index.number" %>
        </th>
        <th class="text-center">
          <i class="fa fa-list"></i>
          <%= t ".name" %>
        </th>
        <th class="text-center">
          <i class="fa fa-barcode"></i>
          <%= t ".word_count" %>
        </th>
        <th class="text-center">
          <i class="fa fa-clock-o"></i>
          <%= t".created_at" %>
        </th>
        <th class="text-center">
          <i class="fa fa-cog"></i>
          <%= t "admin.users.index.option" %>
        </th>
      </tr>
      </thead>
      <tbody id="result_search">
      <%= render @categories %>
      </tbody>
    </table>
  </div>
  <%= will_paginate @categories, class: "paginate" %>
</div>
