<tr class="text-center">
  <td><%= index_for user_counter, @users.current_page,
    Settings.admin_page %>
  </td>
  <td>
    <% if user.is_admin? %>
      <i class="fa fa-star" style="color:red" title="<%= t"user.admin" %>"></i>
    <% end %>
    <%= link_to user.name, user %>
  </td>
  <td><%= user.email %></td>
  <td><%= l user.created_at, format: :date_format %></td>
  <td>
    <%= link_to edit_admin_user_path(user.id),
     class: "btn btn-warning btn-xs btn-option", title: t(".btn_edit_title") do %>
      <i class="fa fa-edit"></i>
      <% end %>
      <% unless user.current_user? current_user %>
        <%= link_to admin_user_path(user.id), method: :delete,
        class: "btn btn-danger btn-xs btn-option",
        title: t(".btn_delete_title"),
        data: {confirm: t(".delete_confirmation",
        name: user.name)} do %>
          <i class="fa fa-trash"></i>
        <% end %>
      <% end %>
  </td>
  <td>
    <% if user.activated? %>
      <i class="fa fa-check"></i>
    <% else %>
      <i class="fa fa-times"></i>
    <% end %>
  </td>
</tr>
