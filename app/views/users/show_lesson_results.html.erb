<%= render template: "users/show" %>
<div class="col-md-9">
  <div class="panel panel-default sidebar-menu">
    <table id="users-data-table" class="table table-hover table-bordered">
      <thead>
      <tr class="header-table">
        <th class="text-center">
          <i class="fa fa-hashtag"></i>
          <%= t"admin.users.index.number" %>
        </th>
        <th class="text-center">
          <i class="fa fa-list-alt"></i>
          <%= t"lessons.show.lesson" %>
        </th>
        <th class="text-center">
          <i class="fa fa-list-alt"></i>
          <%= t"words.index.category" %>
        </th>
        <% if current_user == @user %>
          <th class="text-center">
            <i class="fa fa-cog"></i>
            <%= t"admin.users.index.status" %>
          </th>
        <% end %>
        <th class="text-center">
          <i class="fa fa-language"></i>
          <%= t".result" %>
        </th>
      </tr>
      </thead>
      <tbody id="result_search">
        <%= render @lessons %>
      </tbody>
    </table>
  </div>
  <%= will_paginate @lessons, class: "paginate"%>
</div>
