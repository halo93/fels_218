<% provide :title, t(".title") %>
<div class="row">
  <div>
    <%= form_tag categories_path, method: :get, id: "search",
      class: "form-inline text-center" do %>
      <%= render "admin/shared/search_form" %>
    <% end %>
  </div>
  <div class="panel panel-default">
    <table id="categories-table" class="table table-hover table-bordered">
      <thead>
      <tr class="header-table">
        <th class="text-center">
          <i class="fa fa-hashtag"></i>
          <%= t "admin.users.index.number" %>
        </th>
        <th class="text-center">
          <i class="fa fa-list"></i>
          <%= t ".name" %>
        </th>
        <th class="text-center">
          <i class="fa fa-barcode"></i>
          <%= t ".word_count" %>
        </th>
        <th class="text-center">
          <i class="fa fa-clock-o"></i>
          <%= t".created_at" %>
        </th>
        <th class="text-center">
          <i class="fa fa-play-circle-o"></i>
          <%= t "admin.users.index.action" %>
        </th>
      </tr>
      </thead>
      <tbody id="result_search">
      <%= render @categories %>
      </tbody>
    </table>
  </div>
  <%= will_paginate @categories, class: "paginate" %>
</div>
